<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#A715BD"
                android:centerColor="@color/white"
                android:endColor="#126FD9"
                android:angle="135" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#052343"
                android:centerColor="#77D9FF"
                android:endColor="#A715BD"
                android:angle="135" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</layer-list>